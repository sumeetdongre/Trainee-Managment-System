    <% include ../../Messages/messages %>
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <form id="reg" action="" method="post">
                                <div class="form-group">
                                    <div class="cols-sm-10">
                                    <label for="eid" class="cols-sm-2 control-label">Employee ID</label>
                                    <div class="input-group">
                                            <input type="number" value="<%if(typeof emp!= 'undefined'){%><%= typeof emp.empid != 'undefined' ? emp.empid : '' %><%}%>" class="form-control" name="empid" id="eid" placeholder="Enter Employee id" required/>
                                    </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="enm" class="cols-sm-2 control-label">Employee Name</label>
                                    <div class="cols-sm-10">
                                    <div class="input-group">
                                            <input type="text" value="<%if(typeof emp!= 'undefined'){%><%= typeof emp.ename != 'undefined' ? emp.ename : '' %><%}%>" class="form-control" name="ename" id="enm" placeholder="Enter Name" required/>
                                    </div>
                                    </div>
                                </div>
                      
                        <div class="form-group">
                            <label for="eemail" class="cols-sm-2 control-label">Employee email</label>
                            <div class="cols-sm-10">
